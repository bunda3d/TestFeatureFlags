@model IEnumerable<AppUser>

<h1 class="bg-info text-white pl-1 rounded-left">All Users</h1>
<div>
    <a asp-action="Create" class="btn btn-primary mb-3 mr-2"> <i class="fa fa-plus mr-2"></i>Create a User</a>
    <a asp-action="Create" asp-controller="Role" class="btn btn-outline-primary mb-3 mr-2"><i class="fa fa-key mr-2"></i>Create a Role</a>
</div>
<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Name</th><th>Email</th><th>Update</th><th>Delete</th></tr>
    @foreach (AppUser user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">
                    Update
                </a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
